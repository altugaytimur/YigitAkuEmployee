@model IEnumerable<EmployeeListDto>

<!-- Begin page -->

<div id="layout-wrapper">
    <div class="main-content">
        @*<div class="page-content">*@

        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">Personeller</h4>
                    <div class="page-title-right">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <button asp-controller="Employee"
                                    asp-action="Create"
                                    type="button"
                                    class="btn btn-primary waves-effect waves-light mb-2"
                                    data-toggle="modal"
                                    data-target="#exampleModalCenter">
                                Personel Ekle
                            </button>
                        </div>
                        <table id="basic-datatable" class="table dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>Fotoğraf</th>
                                    <th>İsim Soyisim</th>
                                    <th>Email Adresi</th>
                                    <th>Telefon Numarası</th>
                                    <th>Departman</th>
                                    <th>Doğum Tarihi</th>
                                    <th>Seçenekler</th>
                                </tr>
                            </thead>
                            <tbody style="vertical-align: middle">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @if (item.Image is null)
                                        {
                                            <td class="categories text-center"><img style="width: 50px;border-radius: 50%;" src="~/assets/image/blank-profile-picture.png" /></td>
                                        }
                                        else
                                        {
                                            <td class="categories text-center"><img style="width: 50px;border-radius: 50%;" src="@(string.Format("data:image/png;base64,{0}", item.Image))" /></td>
                                        }
                                        <td>@item.FullName</td>
                                        <td>@item.Email</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Department</td>
                                        <td>@item.DateOfBirth.ToShortDateString()</td>
                                        <td>
                                            <div class="btn-group mr-2" role="group" aria-label="First group">
                                                <a asp-route-id="@item.Id" asp-action="Update" type="button" class="btn btn-outline-warning waves-effect waves-light" data-toggle="tooltip" data-placement="bottom" title="Personel Güncelle">
                                                    Güncelle
                                                </a>
                                                <a asp-route-id="@item.Id" asp-action="Delete" type="button" class="btn btn-outline-danger waves-effect waves-light" data-toggle="tooltip" data-placement="bottom" title="Personel Sil">
                                                    Sil
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        @* </div>*@
    </div>
</div>
<partial name="~/Views/Employee/CreateEmployeePartial.cshtml" model="new EmployeeCreateVM()"></partial>


